# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_BASE=https://api.anthropic.com

# Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=linguistics

CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION=linguistics_knowledge

# Redis Configuration (for session management)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO
APP_SECRET_KEY=your_secret_key_here

# Testing Configuration
TEST_ANTHROPIC_API_KEY=your_test_anthropic_api_key_here
TEST_USE_REAL_API=true
TEST_TIMEOUT=30

# Knowledge Ingestion Configuration
KNOWLEDGE_STORAGE_PATH=/app/data/knowledge
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,txt,md,html

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=json

